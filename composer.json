{
    "name": "alibayat/laravel-categorizable",
	"description": "Implementing Categories system for Laravel's Eloquent models.",
	"license": "MIT",
	"keywords": ["Laravel", "Eloquent", "Laravel-Categorizable", "Laravel Categorizable"],
	"authors": [
		{
		    "name": "Ali Bayat",
		    "email": "ali.bayat@live.com"
		}
	],
    "require": {
        "php": "^7.2|^8.0",
        "illuminate/database": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "kalnoy/nestedset": "^6.0",
        "spatie/laravel-sluggable": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "AliBayat\\LaravelCategorizable\\": "src/"
        }
    },

    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "AliBayat\\LaravelCategorizable\\CategorizableServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
